{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TraceLog",
  "type": "object",
  "required": ["trace_id", "timestamp", "level", "message"],
  "properties": {
    "trace_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "level": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error", "audit"]
    },
    "message": { "type": "string" },
    "payload": { "type": "object" },
    "merkle_proof": { "type": "string" }
  }
}
